{
  "name": "microfern",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/microfern.js",
      "require": "./dist/microfern.cjs"
    }
  },
  "main": "./dist/microfern.cjs",
  "module": "./dist/microfern.js",
  "types": "./dist/microfern.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --fix",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@vitest/coverage-v8": "^1.6.0",
    "camelcase": "^8.0.0",
    "eslint": "^8.56.0",
    "typescript": "^5.4.5",
    "vite": "^5.3.1",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "*.ts": "pnpm run lint"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^7.13.1"
  }
}
